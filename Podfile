# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'HandMade' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for HandMade

  # RxSwift + Dependencies
  pod 'RxSwift', '~> 4.4.0'
  pod 'RxCocoa', '~> 4.4.0'
  pod 'RxOptional', '~> 3.6.2'
  pod 'RxGesture'
  pod 'RxAppState'

  # Image + Animation + UI
  pod 'Kingfisher', '~> 4.10.1'
  pod 'SnapKit', '~> 4.2.0'
  pod 'Toaster'
  pod 'Cosmos'

  # Other Swift Utilities
  pod 'Then', '~> 2.4.0'

  target 'HandMadeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'HandMadeUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
